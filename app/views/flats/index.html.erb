<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>Stay at our Flats for free!</h1>
      <%= cl_image_tag("wwl3aqfo4ziayuwst50i",
      ) %>
    </div>
  </div>


   <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-md-4">
        <div class="flat-card">
          <% if flat.photo.present? %>
             <%= cl_image_tag flat.photo.key, height: 300, width: 350, crop: :fill %>
          <% else %>
            <div class="flat-card-image" style="background-image: url('<%= flat.picture_url %>')"></div>
          <% end %>

            <div class="flat-card-content">
              <div class="flat-card-title">
                <h3><%= flat.name %></h3>
              </div>
                <p><%= flat.address %></p>
              <div class="flex">
                <div class="flex">
                  <i class="fas fa-male"></i><span><%= flat.number_of_guests %></span>
                </div>
                <div class="flex ms-3">
                  <i class="fas fa-euro-sign"></i><%= flat.price_per_night %>
                </div>
              </div>
            </div>
          </div>
          <div class="flat-card-actions">
            <%= link_to 'More info', flat_path(flat) %>
            <% if policy(flat).edit? %>
              <%= link_to 'Edit', edit_flat_path(flat), class: 'ms-3 text-warning' %>
            <% end %>
            <% if policy(flat).destroy? %>
            <%= link_to "Remove", flat_path(flat),
                method: :delete,
                data: { confirm: "Are you sure?" },
                class: 'ms-3 text-danger'
            %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
